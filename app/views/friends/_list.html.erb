<div class="row">
    <div class="col-9">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @my_friendships.each do |mf| %>
                    <tr>
                        <th scope="row"><%= mf.email %></th>
                        <td><%= "#{mf.first_name} #{mf.last_name}" %></td>
                        <td><%= link_to 'View Profile', user_path(mf),
                                        class: 'btn btn-sm btn-success' %>
                            <%= link_to 'Stop following', friendship_path(mf), method: :delete, data: {confirm: 'Are you sure?'},
                                        class: 'btn btn-sm btn-warning' %>                
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>